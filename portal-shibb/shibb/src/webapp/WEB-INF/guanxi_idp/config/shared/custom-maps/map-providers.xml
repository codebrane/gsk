<!-- map-providers.xml
     This is list of service providers that require attributes to be mapped.
     If you want to remove mappings for a service provider, just comment out
     it's grouping in the list.
-->
<AttributeMap xmlns="urn:guanxi:idp">
  <!-- This set tells the IdP to invoke attribute mapping rules for the sakai-guard
       service provider. -->
  <provider providerId="sakai-guard">
	<mapRef name="sakaiUserID-mapping" />
	<mapRef name="sakaiFirstName-mapping" />
	<mapRef name="sakaiLastName-mapping" />
	<mapRef name="sakaiMail-mapping" />
  </provider>
</AttributeMap>
