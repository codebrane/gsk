<!-- arp-bags.xml
     This file defines bags of attributes that can be released. You can create bags to
     group attributes that are related and reuse them for different service providers.
     There are no service providers defined in this file. Service Provider information
     is held in the arp-providers.xml file. -->
<arp xmlns="urn:guanxi:idp">
  <!-- This is the global bag. It matches all attributes no matter what
       their values are. -->
  <bag name="global">
    <attribute name="*" value="*" />
  </bag>

  <!-- This bag holds all the attributes the default FlatFileAttributor can produce. -->
  <bag name="FlatFileAttributes">
    <attribute name="id" value="*" />
    <attribute name="firstName" value="*" />
    <attribute name="surname" value="*" />
    <attribute name="email" value="*" />
    <attribute name="role" value="*" />
    <attribute name="group" value="*" />
  </bag>

  <!-- This bag holds all the mapped versions of the FlatFileAttributor's
       attributes. If you want to block release of the original attributes
       while releasing the mapped versions, just don't include the bag
       named "FlatFileAttributes" in a provider. -->
  <bag name="MappedFlatFileAttributesForProtectedApp">
    <attribute name="protectedApp_ID" value="*" />
    <attribute name="idWithDomain" value="*" />
    <attribute name="idEncrypted" value="*" />
    <attribute name="protectedApp_FirstName" value="*" />
    <attribute name="protectedApp_Surname" value="*" />
    <attribute name="protectedApp_Email" value="*" />
    <attribute name="mail" value="*" />
    <attribute name="memberOf" value="*" />
    <attribute name="function" value="*" />
    <attribute name="urn:mace:dir:attribute-def:eduPersonScopedAffiliation" value="*" />
    <attribute name="protectedApp_PersistentID" value="*" />
  </bag>

  <bag name="ldap">
    <attribute name="cn" value="*" />
    <attribute name="sn" value="*" />
    <attribute name="givenName" value="*" />
    <attribute name="mail" value="*" />
    <attribute name="urn:mace:dir:attribute-def:eduPersonTargetedID" value="*" />
    <attribute name="urn:mace:dir:attribute-def:eduPersonScopedAffiliation" value="*" />
  </bag>

  <!-- This bag holds all the attributes that are generated by the "globalGroupMapping"
       mapping rules defined in custom-maps/global-maps.xml. -->
  <bag name="memberMapping">
  	<attribute name="memberOf" value="*" />
  </bag>
</arp>
