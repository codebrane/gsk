<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                          http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
  <!-- WAYF location service -->
  <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    <property name="alwaysUseFullPath"><value>true</value></property>
    <property name="urlMap">
      <map>
        <entry key="/guanxi_sp/shibb/wayf-location"><ref bean="wayfLocationService"/></entry>
      </map>
    </property>
  </bean>

  <!-- Authentication Consumer service -->
  <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    <property name="alwaysUseFullPath"><value>true</value></property>
    
    <property name="interceptors">
      <list>
        <ref bean="idpVerifier" />
      </list>
    </property>

    <property name="urlMap">
      <map>
        <entry key="/guanxi_sp/shibb/acs"><ref bean="authConsumerService"/></entry>
      </map>
    </property>
  </bean>

  <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    <property name="alwaysUseFullPath"><value>true</value></property>

    <property name="urlMap">
      <map>
        <entry key="/guanxi_sp/shibb/process">
          <ref bean="authConsumerService" />
        </entry>
      </map>
    </property>
  </bean>
</beans>